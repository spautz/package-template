{
  "name": "@spautz/package-template",
  "version": "0.0.1",
  "description": "My opinionated template for a single-package repo",
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/spautz/package-template#readme",
  "bugs": "https://github.com/spautz/package-template/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/spautz/package-template.git"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "http://stevenpautz.com/"
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "files": [
    "bin/",
    "dist/",
    "legacy-types/",
    "lib-dist/",
    "src/",
    "LICENSE",
    "*.md"
  ],
  "source": "src/index.tsx",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.esm.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "esmodule": "dist/index.modern.js",
  "exports": "./dist/index.modern.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": "^14 || ^16 || ^18",
    "pnpm": "1.*"
  },
  "scripts": {
    "____ HOOKS _________________________________________________________": "",
    "prepare": "husky install && yon run build",
    "prepack": "pnpm run clean && pnpm run dev:readonly",
    "husky:precommit": "yarn run lint-staged",
    "husky:prepush": "yon run format:verify && yon run types && yon run lint",
    "____ MAIN __________________________________________________________": "",
    "build": "yon run build:clean && yon run build:main && yon run build:types",
    "test": "yon run test:coverage",
    "____ INTEGRATION ___________________________________________________": "",
    "all": "yon run clean && yon run format && yon run types && yon run lint && yon run test:coverage && yon run build",
    "all:readonly": "yon run format:verify && yon run types && yon run lint && yon run test:coverage",
    "clean": "yon run build:clean && yon run test:clean && rimraf ./node_modules/.cache/ *.log",
    "____ INDIVIDUAL COMMANDS ___________________________________________": "",
    "build:clean": "rimraf ./dist ./legacy-types",
    "build:main": "microbundle build --jsx React.createElement",
    "build:types": "yon run build:types:3.x && yon run build:types:4.x",
    "build:types:3.x": "downlevel-dts ./dist ./legacy-types/ts3.x/dist --to=3.0",
    "build:types:4.x": "downlevel-dts ./dist ./dist --to=4.0",
    "build:watch": "microbundle watch --jsx React.createElement",
    "format": "prettier --write .",
    "format:verify": "prettier --list-different .",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "release:changelog": "standard-version --skip.commit --skip.tag --release-as ",
    "release:tag": "standard-version --commit-all --sign --skip.changelog --release-as ",
    "test:clean": "rimraf ./coverage",
    "test:coverage": "yon run test:clean && jest --coverage --watch=false --watchAll=false",
    "test:nowatch": "yon run test:clean && jest --coverage=false --watch=false --watchAll=false --bail",
    "test:watch": "yon run test:clean && jest --coverage=false --watch",
    "test:watchcoverage": "yon run test:clean && jest --coverage --watchAll",
    "types": "tsc --noEmit --p tsconfig.json"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "12.1.4",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "downlevel-dts": "0.9.0",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "7.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "microbundle": "0.14.2",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3",
    "yarn-or-npm": "3.0.1"
  },
  "peerDependencies": {
    "react": "^16.8.3 || ^17 || ^18"
  },
  "lint-staged": {
    "**/*.{css,html,js,jsx,json,less,md,scss,ts,tsx}": [
      "prettier --write"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "yon run format"
    }
  },
  "typesVersions": {
    "<4": {
      "*": [
        "legacy-types/ts3.x/*"
      ]
    }
  }
}
