{
  "extends": "./tsconfig-base.typecheck.json",
  "compilerOptions": {
    // Modules
    "module": "commonjs",
    "target": "es6",

    // Emit
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/*.stories.*", "**/__tests__", "**/*.test.*"]
}
