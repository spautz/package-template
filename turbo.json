{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",

  "tasks": {
    // -----------------------------------------------------------------------
    // Workspace tasks

    // Tests are a repo-wide task
    "//#w:all-tests": {
      "inputs": ["$TURBO_DEFAULT$", "**/__tests__/**", "**/tests/**", "**/*.test.*", "**/*.spec.*"],
      "outputs": ["coverage/**"]
    },
    "//#w:all-tests:ci": {
      "inputs": ["$TURBO_DEFAULT$", "**/__tests__/**", "**/tests/**", "**/*.test.*", "**/*.spec.*"],
      "outputs": ["coverage/**"]
    },
    "//#w:all-tests:ui": {
      "cache": false,
      "persistent": true
    },
    "//#w:all-tests:watch": {
      "cache": false,
      "persistent": true
    },

    // Lint and typecheck only target the root's own files: not repo-wide
    "//#w:lint": {},
    "//#w:lint:fix": {},
    "//#w:typecheck": {},

    // -----------------------------------------------------------------------
    // Batch tasks for packages

    "pipeline-all": {
      "dependsOn": ["typecheck", "lint:fix", "test", "build"]
    },
    "pipeline-ci": {
      "dependsOn": ["typecheck", "lint", "test:ci", "build"]
    },

    // -----------------------------------------------------------------------
    // Package tasks

    // Anything that's a dependency of something else in this repo must be built
    "dependencies": {
      "dependsOn": ["^build"]
    },
    // Topographic dependencies are abstract, since there's no 'topo' task to run
    "topo": {
      "dependsOn": ["^topo"]
    },

    // Individual/standalone package tasks
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"]
    },
    "build:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "lint": {},
    "lint:fix": {},
    "test": {
      "dependsOn": ["^build", "^test"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["^build", "^test:ci"],
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "dependsOn": ["^build", "^test"],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "test:watch": {
      "dependsOn": ["^build", "^test"],
      "cache": false,
      "persistent": true,
      "interactive": true
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    }
  }
}
